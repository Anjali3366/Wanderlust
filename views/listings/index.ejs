<% layout("/layouts/boilerplate") %>

<style>
  #filters {
    height: 60px;

    margin-top: 2rem;
    margin-bottom: 1rem;
    display: flex;
    justify-content: space-evenly;
  }

  .filter {
    height: fit-content;
    border: none;
    text-align: center;
    margin-left: 2rem;
    opacity: 0.7;
  }

  .filter:hover {
    opacity: 1;
    border-bottom: 2px solid black;
  }

  .setting:hover {
    height: 50px;
    border: 2px solid black;
    border-radius: 10px;
    padding: 0px 30px 0px;
    opacity: 1;
  }

  .border1 {
    border-radius: 1px solid black;
    padding: 10px 45px 40px;
  }

  .border1:hover {
    padding: 0rem 0.3rem;
    height: 50px;
    text-align: center;

    border-radius: 10px;
    border: 2px solid black;
  }

  .tax-info {
    display: none;
  }
  a {
    color: rgb(52, 50, 50);
    text-decoration: none;
  }
</style>

<body>
  <div id="filters">
    <div class="filter">
      <i class="fa-solid fa-ticket-simple"></i>
      <p>icons</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-mug-hot"></i>
      <p>Bed&Breakfast</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-cow"></i>
      <p>Farm</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-satellite"></i>
      <p>OMG!</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-snowflake"></i>
      <p>Arctic</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-water"></i>
      <p>Lake</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-umbrella-beach"></i>
      <p>Beach</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-satellite"></i>
      <p><a href="/category/OMG">OMG!</a></p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-mug-hot"></i>
      <p>Bed&Breakfast</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-cow"></i>
      <p>
        <a href="/category/Farm">Farm</a>
      </p>
    </div>

    <div class="filter setting">
      <i class="fa-solid fa-sliders"> </i>
      <p>filters</p>
    </div>
    <div class="form-check-reverse border1 filter form-switch tax-toggle">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault"
        >Display total before taxces</label
      >
    </div>
  </div>

  <!-- <h3></h3> -->
  <!-- <form action="/listings/new" method="GET">
  <button>Create New Lisitng</button>
</form> -->

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings) { %>
    <a href="/listings/<%= listing.id %>" class="listing-link">
      <div class="card col listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listig_image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %> </b> <br />
            &#8377;<%= listing.price.toLocaleString("en-IN")%>/ night
            <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
<script>
  let getswitch = document.getElementById("flexSwitchCheckDefault");

  console.log(getswitch);
  getswitch.addEventListener("click", () => {
    let element = document.getElementsByClassName("tax-info");
    // Iterate over the HTMLCollection

    for (info of element) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
